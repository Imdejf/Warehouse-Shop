@model WarehauseShop.Application.Authentication.Register.RegisterCommand 
@using WarehauseShop.Domain

@{
    ViewData["Title"] = "Register";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Strona główna</a>
                    <span>Zarejestruj</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Zarejestruj</h2>
                    <form method="post" asp-action="Register">
                        <div class="group-input">
                            <label for="email">Email *</label>
                            <input type="text" asp-for="Email">
                        </div>
                        <div class="group-input">
                            <label for="email">Nazwa użytkownika *</label>
                            <input type="text" asp-for="Username">
                        </div>
                        <div class="group-input">
                            <label for="email">Imię *</label>
                            <input type="text" asp-for="FirstName">
                        </div>
                        <div class="group-input">
                            <label for="email">Nazwisko *</label>
                            <input type="text" asp-for="LastName">
                        </div>
                        <div class="group-input">
                            <label for="email">Numer Telefonu *</label>
                            <input type="text" asp-for="PhoneNumber">
                        </div>
                        <div class="group-input">
                            <label for="pass">Hasło *</label>
                            <input type="text" asp-for="Password">
                        </div>
                        <div class="group-input">
                            <label for="pass">Potwierdź hasło *</label>
                            <input type="text" asp-for="ConfirmPassword">
                        </div>
                        <div class="py-2">
                            <input type="radio" name="rdUserRole" value="@SD.AdminRole" /> @SD.AdminRole
                            <input type="radio" name="rdUserRole" value="@SD.CustomerRole" /> @SD.CustomerRole
                            <input type="radio" name="rdUserRole" value="@SD.Salesman" /> @SD.Salesman
                            <input type="radio" name="rdUserRole" value="@SD.Manager" /> @SD.Manager
                        </div>
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label for="save-pass">
                                    Zapisz hasło
                                    <input type="checkbox" id="save-pass">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="site-btn login-btn">Zarejestruj</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->
<!-- Partner Logo Section Begin -->
<div class="partner-logo">
    <div class="container">
        <div class="logo-carousel owl-carousel">
            <div class="logo-item">
                <div class="tablecell-inner">
                    <img src="img/logo-carousel/logo-1.png" alt="">
                </div>
            </div>
            <div class="logo-item">
                <div class="tablecell-inner">
                    <img src="img/logo-carousel/logo-2.png" alt="">
                </div>
            </div>
            <div class="logo-item">
                <div class="tablecell-inner">
                    <img src="img/logo-carousel/logo-3.png" alt="">
                </div>
            </div>
            <div class="logo-item">
                <div class="tablecell-inner">
                    <img src="img/logo-carousel/logo-4.png" alt="">
                </div>
            </div>
            <div class="logo-item">
                <div class="tablecell-inner">
                    <img src="img/logo-carousel/logo-5.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Partner Logo Section End -->
