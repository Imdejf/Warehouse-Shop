@model WarehauseShop.Application.Authentication.Login.Command.LoginCommand
@{
    ViewData["Title"] = "Login";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Strona główna</a>
                    <span>Logowanie</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Logowanie</h2>
                        <form method="post" asp-action="Login">
                            <div class="group-input">
                                <label for="username">Nazwa użytkownika lub email *</label>
                                <input type="text" asp-for="Username" id="username">
                            </div>
                            <div class="group-input">
                                <label for="pass">Hasło *</label>
                                <input type="text" asp-for="Password" id="pass">
                            </div>
                            <div class="group-input gi-check">
                                <div class="gi-more">
                                    <label for="save-pass">
                                        Zapamientaj hasło
                                        <input type="checkbox" id="save-pass">
                                        <span class="checkmark"></span>
                                    </label>
                                    <a href="#" class="forget-pass">Zapomniałem hasła!</a>
                                </div>
                            </div>
                            <button type="submit" class="site-btn login-btn">Zaloguj</button>
                        </form>
                        <div class="switch-login">
                            <a asp-controller="Account" asp-action="Register" class="or-login">Stwórz nowe konto</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Register Form Section End -->
